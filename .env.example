# Server Configuration
NODE_ENV=development
PORT=5000
API_BASE_URL=http://localhost:5000

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=smarthealth

# JWT Secret
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_EXPIRES_IN=7d

# Africa's Talking API (Used for USSD, SMS, and Voice)
AT_API_KEY=your_africas_talking_api_key
AT_USERNAME=your_africas_talking_username

# Africa's Talking USSD
AT_USSD_CODE=*123#

# Africa's Talking SMS (Two-way with Shortcode)
AT_SMS_SHORTCODE=12345
AT_SMS_KEYWORD=HEALTH

# Africa's Talking Voice
AT_VOICE_PHONE_NUMBER=+254XXXXXXXXX

# Zenopay API
ZENOPAY_API_KEY=your_zenopay_api_key
ZENOPAY_MERCHANT_ID=your_zenopay_merchant_id
ZENOPAY_SECRET=your_zenopay_secret
ZENOPAY_CALLBACK_URL=http://localhost:5000/api/payments/callback

# Trial Configuration
TRIAL_DURATION_DAYS=1
FREE_CONSULTATIONS_PER_TRIAL=3

# Frequent User Offers
CONSULTATIONS_FOR_DISCOUNT=5
DISCOUNT_PERCENTAGE=20
CONSULTATIONS_FOR_FREE=10
CONSULTATIONS_FOR_PRIORITY=3

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Voice Provider (use 'africastalking' or 'twilio')
VOICE_PROVIDER=africastalking

# Twilio Voice API (optional - if using Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
